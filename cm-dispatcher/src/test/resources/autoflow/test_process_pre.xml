<?xml version="1.0" encoding="UTF-8"?>
<!-- 开发期测试专用流程定文件 -->
<process id="Proc_Develop_Test_Pre" name="TestXmlforDeveloping">
	<!-- 流程开始 -->
	<start name="start">
		<transition to="task01"/>
	</start>
	
	
	<!-- step:第一个任务 -->
	<task name="task01" refbean="LocalLauncher"
		refcomponent="TaskService01"><!-- refbean 写的是LauncherService的具体实现 -->
	<!-- field标签内的内容将会以k-v对的形式给到task，当做task的入口参数 -->
		<field key="myVar1" value="My life is a straight line, turning only for you." />
		<transition to="fork01"/>
	</task>
	
	<fork name="fork01">
		<transition to="task02" />
		<transition to="task03" />
	</fork>
	
	<!-- step:第二个测试任务 -->
	<task name="task02" refbean="LocalLauncher"
		refcomponent="TaskService02">
		<transition to="join01"/>
	</task>
	
	<!-- step:第三个测试任务 -->
	<task name="task03" refbean="LocalLauncher"
		refcomponent="TaskService03">
		<transition to="join01"/>
	</task>
		
	<join name="join01">
		<transition to="task04" />
	</join>
	
	<!-- step:第四个测试任务 -->
	<task name="task04" refbean="LocalLauncher"
		refcomponent="TaskService04">
		<transition to="task05"/><!-- 正常流程就直接结束 -->
		
	</task>
		
	<!-- step:第五个测试任务 -->
	<task name="task05" refbean="LocalLauncher"
		refcomponent="TaskService05">
		<transition to="task06"/>
	</task>
	
	<!-- step:第六个测试任务 -->
	<task name="task06" refbean="LocalLauncher"
		refcomponent="TaskService06">
		<transition to="end"/>
	</task>	
	
	<!-- 流程结束 -->
	<end name="end"/>
</process>